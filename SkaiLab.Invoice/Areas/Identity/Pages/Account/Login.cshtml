                                    }
                                    @if (pr.Name == "Microsoft")
                                    {
                                        <button class="accountButton firstButton" name="provider" id="MicrosoftAccountExchange" type="submit" value="@pr.Name" tabindex="1">@ShareLocalizer.GetResource("Sign in with Microsoft")</button>
                                    }
                                }
                            </form>
                        }*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>